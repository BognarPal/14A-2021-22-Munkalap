<Window x:Class="munkalap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:munkalap"
        mc:Ignorable="d"
        Title="Munkalap" Height="450" Width="800" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Törzsadatok">
                <MenuItem Name="miEmployees" Header="Dolgozók" Click="miEmployees_Click" />
            </MenuItem>
            <MenuItem Name="miFailures" Header="Munkalapok" Click="miFailures_Click"/>
        </Menu>
    </Grid>
</Window>
